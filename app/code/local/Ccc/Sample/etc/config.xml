<config>
    <modules>
        <Ccc_Sample>    
            <version>1.0.0</version>
        </Ccc_Sample>
    </modules>
    <global>
        <models>
            <sample>
                <class>Ccc_Sample_Model</class>
                <resourceModel>sample_resource</resourceModel>
            </sample>
            <sample_resource>
                <class>Ccc_Sample_Model_Resource</class>
                <!-- <entities>
                    <sample>
                        <table>sample</table>
                    </sample>
                </entities> -->
                <entities>
                    <sample>
                        <table>sample</table>
                    </sample>
                </entities>
            </sample_resource>
        </models>
        <blocks>
            <sample>
                <class>Ccc_Sample_Block</class>
            </sample>
        </blocks>
        <helpers>
           <sample>
                  <class>Ccc_Sample_Helper</class>
            </sample>
        </helpers>
        <resources>
            <sample_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </sample_write>
            <sample_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </sample_read>
            <sample_setup>
                <setup>
                    <module>Ccc_Sample</module>
                    <class>Ccc_Sample_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sample_setup>
        </resources>
    </global>
    <admin>
        <!-- <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Ccc_Vendor>Ccc_Vendor_Adminhtml</Ccc_Vendor>
                    </modules>
                </args>
            </adminhtml>
        </routers> -->
        <routers>
            <Sample>
                <use>admin</use>
                <args>
                    <module>Ccc_Sample</module>
                    <frontName>sample</frontName>
                </args>
            </Sample>
        </routers>
